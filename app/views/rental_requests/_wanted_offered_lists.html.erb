<div class="row">
  <div class="col-md">
    <div class="card mt-3">
      <div class="card-header">
        Wants
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% rental_request.wanted_per_requests.each do |query| %>
            <li class="list-group-item border-0 px-0 d-flex align-items-center">
              <div>
                <%= image_tag(query.game.thumbnail_url, class: "img-thumbnail flex-shrink-0 shadow-sm", height:
                  20, width: 70) %>
                <b class="ms-md-2"><%= link_to query.game.title, query.game %></b>
              </div>
              <div class="ms-auto">
                <%= render 'trash_wanted_form', rental_request: rental_request, game: query.game unless rental_request.submitted? %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md">
    <div class="card mt-3">
      <div class="card-header">
        Offers in return
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% rental_request.offered_per_requests.each do |query| %>
            <li class="list-group-item border-0 px-0 d-flex align-items-center">
              <div>
                <%= image_tag(query.game.thumbnail_url, class: "img-thumbnail flex-shrink-0 shadow-sm", height:
                  20, width: 70) %>
                <b class="ms-md-2"><%= link_to query.game.title, query.game %></b>
              </div>
              <div class="ms-auto">
                <%= render 'trash_offered_form', rental_request: rental_request, game: query.game unless rental_request.submitted? %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
