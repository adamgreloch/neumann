<% if user_signed_in? && current_user.has_request_open? %>
  <% @request = RentalRequest.find(current_user.rental_request_id) %>

  <%= bootstrap_form_with model: @request.wanted_per_requests.build do |f| %>
    <%= hidden_field_tag :rental_request_id, current_user.rental_request_id %>
    <%= hidden_field_tag :game_id, @game.id %>
    <%= f.button class: "btn btn-outline-primary btn-sm" do %>
      <i class="bi bi-circle me-1"></i>
      Want
    <% end %>
  <% end %>
<% end %>
