<h2>Edit review</h2>

<div class="mt-3 d-flex gap-4 align-items-center">
  <%= render 'users/user_snippet', user: @opinion_about %>
</div>

<div class="col-lg-6">
  <%= render "form", user: @opinion_about %>

  <div class="mt-2">
    <%= button_to "Delete", user_opinion_path(@user_opinion),
                  class: "btn btn-outline-danger",
                data: { 'turbo-confirm': "Are you sure you want to delete this opinion?" },
                method: :delete %>
  </div>
</div>
