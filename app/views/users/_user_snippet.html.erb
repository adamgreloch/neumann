<div class="col-4 col-md-2 col-lg-1 mb-3 mb-md-0">
  <%= identicon_for user %>
</div>
<div class="col-auto mb-3">
  <h4 class="mb-1"><%= link_to user.name, user %></h4>
  <span class="badge bg-secondary">activity
    <i class="bi bi-arrow-right"></i> <%= user.activity %></span>
  <span class="badge bg-info">contact
    <i class="bi bi-arrow-right"></i>
    <%= user.avg_contact %>/4</span>
  <span class="badge bg-danger">comply
    <i class="bi bi-arrow-right"></i>
    <%= user.avg_compliance %>/6</span>
</div>
