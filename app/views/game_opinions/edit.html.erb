<div class="container">
  <div class="row">
    <div class="col-md-4 mb-4 mb-md-0">
      <%= image_tag(@game_opinion.opinion_about.image_url, class: "img-thumbnail shadow") %>
    </div>
    <div class="col-md">
      <h2>Edit review</h2>
      <%= render "form", game: @game_opinion.opinion_about %>
      <%= button_to "Delete", game_opinion_path(@game_opinion), class: "btn btn-outline-danger mt-2", data: { 'turbo-confirm': "Are you sure you want to delete this opinion?" }, method: :delete %>
    </div>
  </div>
</div>
