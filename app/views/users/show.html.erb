<div class="container">
  <div class="row">
    <div class="col">
      <h2>Profile page of <%= @user.name %>
        <span class="text-secondary">
        <% if user_signed_in? && @user.id == current_user.id %>
            (you)
          <% else %>
            (#<%= @user.id %>)
        <% end %>
        </span>
      </h2>
    </div>
    <p class="text-secondary">
      <% if user_signed_in? && @user.id == current_user.id %>
        Track your own stats, manage game copies or read what other users think about you.
      <% else %>
        See user's stats, game copies, give him credit, review him or report to authorities (scary).
      <% end %>
    </p>
  </div>
  <div class="card">
    <div class="card-body">
      <div class="row mt-2 align-items-center">
        <div class="col-4 col-md-2 mb-3">
          <%= identicon_for @user %>
        </div>
        <div class="col-auto mb-3">
          <h4 class="mb-1"><%= @user.name %></h4>
          <span class="badge bg-secondary">activity: <%= @user.activity %></span>
        </div>
        <div class="ms-auto col-md-auto">
          <div class="btn-group gap-2">
            <%= button_to nil,
                          class: "btn btn-outline-primary", method: :put do %>
              <i class="bi bi-star me-1"></i> Gift a star
            <% end %>
            <%= button_to nil,
                          class: "btn btn-outline-primary", method: :put do %>
              <i class="bi bi-clipboard-check me-1"></i> Review
            <% end %>
            <%= button_to nil,
                          class: "btn btn-outline-primary", method: :put do %>
              <i class="bi bi-flag me-1"></i> Report
            <% end %>
          </div>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col">
          <% unless @user.description.nil? %>
            <h4>User description</h4>
            <p>
              <%= @user.description %>
            </p>
          <% end %>
          <h4>Stats</h4>
          <ul class="list-unstyled mb-1">
            <li><b>Member since:</b> <%= l @user.created_at %></li>
            <li><b>Requests active:</b> <%= @user.rental_requests.where(status: "submitted").count %></li>
            <li><b>Rentals:</b> <%= @user.all_active_rentals.count %> in progress, <%= @user.all_archival_rentals.count %> finished.</li>
            <li><b>Game copies provided:</b> <%= @user.game_copies.count %></li>
          </ul>
          <h4 class="mt-3">Copies owned</h4>
          <div class="list-group">
            <% @user.game_copies.each do |copy| %>
              <div class="list-group-item list-group-item-action d-md-flex align-items-center">
                <div class="d-flex gap-2 align-items-center">
                  <%= image_tag(copy.realizes.thumbnail_url, class: "img-thumbnail", width: 80) %>
                  <div>
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1"><%= link_to copy.realizes.title, copy %>
                    <span class="text-secondary">(#<%= copy.id %>)</span></h5>
                  </div>
                  <p class="mb-1"><%= copy.description %></p>
                  <small>Condition: <%= copy.condition %>/8</small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
