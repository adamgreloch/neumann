<h4 class="mt-3">Copies owned</h4>
<div class="mt-2 list-group">
  <% user.game_copies.each do |copy| %>
    <div class="list-group-item list-group-item-action d-md-flex align-items-center">
      <div class="d-flex gap-2 align-items-center">
        <%= image_tag(copy.realizes.thumbnail_url, class: "img-thumbnail", width: 80) %>
        <div>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= link_to copy.realizes.title, copy %>
              <span class="text-secondary">(#<%= copy.id %>)</span></h5>
          </div>
          <p class="mb-1"><%= copy.description %></p>
          <div class="d-flex gap-2">
            <small>Condition: <%= copy.condition %>/8</small>
            <small>Status: <%= render 'game_copies/status', game_copy: copy %></small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
