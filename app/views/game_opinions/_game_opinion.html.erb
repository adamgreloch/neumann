<div class="list-group-item">
  <div class="d-flex align-items-center gap-3">
    <div class="my-2" style="max-width: 70px">
      <%= identicon_for game_opinion.opinion_by %>
    </div>
    <div>
      <b> <%= link_to game_opinion.opinion_by.name, game_opinion.opinion_by %> </b>
      <p class="mb-0">
        <%= game_opinion.comment %>
      </p>
    </div>
    <div class="d-flex ms-auto gap-2">
      <%= link_to edit_game_opinion_path(game_opinion),
                  class: "btn btn-outline-primary ms-auto" do %>
        <i class="bi bi-pencil"></i>
      <% end if game_opinion.opinion_by == current_user %>
      <%= button_to game_opinion_path(game_opinion),
                    class: "btn btn-outline-primary ms-auto",
                    data: { 'turbo-confirm': "1984 detected. Are you sure you want to delete this opinion?" },
                    method: :delete do %>
        <i class="bi bi-trash"></i>
      <% end if current_user.admin? %>
    </div>
  </div>
  <div class="text-muted">
    <ul class="list-unstyled mb-1 d-flex gap-4">
      <li><b>Rating:</b> <%= game_opinion.rating %></li>
      <li><b>Weight:</b>  <%= game_opinion.weight %> </li>
      <li><b>Players:</b>
        <% if game_opinion.min_players == game_opinion.max_players %>
          <%= game_opinion.min_players %>
        <% else %>
          <%= game_opinion.min_players %>-<%= game_opinion.max_players %>
        <% end %>
      </li>
      <li><b>Playing time:</b> <%= game_opinion.playing_time %> min</li>
    </ul>
  </div>
</div>
