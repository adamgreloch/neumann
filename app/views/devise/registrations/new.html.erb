<h2 class="mb-3">Log in</h2>

<div class="col-md-3">

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, label: "Username", floating: true %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", floating: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", help: "Must be at least 6 characters long",
                         floating: true %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", floating: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>

</div>

<%= render "devise/shared/links" %>
