<%= bootstrap_form_with(model: game, layout: :horizontal) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>

  <%= f.text_field :title, required: true %>
  <%= f.number_field :bgg_id, required: true  %>
  <%= f.text_area :description %>
  <%= f.text_field :release_year, required: true  %>
  <%= f.text_field :bgg_rating, required: true  %>
  <%= f.text_field :bgg_rated_count, required: true  %>
  <%= f.text_field :bgg_ranking, required: true  %>
  <%= f.text_field :boxart_url %>

  <%= f.submit %>
<% end %>
