<div class="list-group-item">
  <div class="d-flex align-items-start gap-3">
    <div style="min-width: 70px; max-width: 70px">
      <%= identicon_for user_opinion.opinion_by %>
    </div>
    <div>
      <b> <%= link_to user_opinion.opinion_by.name, user_opinion.opinion_by %> </b>
      <p>
        <%= user_opinion.comment %>
      </p>
    </div>
    <div class="d-flex ms-auto gap-2">
      <%= link_to edit_user_opinion_path(user_opinion), class: "btn btn-outline-primary ms-auto" do %>
        <i class="bi bi-pencil"></i>
      <% end if user_opinion.opinion_by == current_user %>
      <%= button_to user_opinion_path(user_opinion), class: "btn btn-outline-primary ms-auto", data: { 'turbo-confirm': "1984 detected. Are you sure you want to delete this opinion?" }, method: :delete do %>
        <i class="bi bi-trash"></i>
      <% end if current_user.admin? %>
    </div>
  </div>
  <div class="text-muted">
    <ul class="list-unstyled mt-1 mb-0">
      <li><b>Contact
        experience:</b> <%= "#{user_opinion.contact_rating} - #{describe_contact(user_opinion.contact_rating)}." %></li>
      <li>
        <b>Compliance:</b>  <%= "#{user_opinion.compliance_rating} - #{describe_compliance(user_opinion.compliance_rating)}." %>
      </li>
    </ul>
  </div>
</div>
