<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="row">
          <div class="col-2">
            <%= identicon_for user %>
          </div>
          <div class="col-auto">
            <%= link_to user.name, user%>
          </div>
        </div>
      </li>
    </ul>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
