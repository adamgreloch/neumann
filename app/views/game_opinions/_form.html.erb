<%= bootstrap_form_with(model: @game_opinion) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>

  <%= f.hidden_field :opinion_by_id, value: current_user.id %>
  <%= f.hidden_field :opinion_about_id, value: game.id %>

  <%= f.number_field :rating, label: "Game rating (0-10)",
                    required: true, step: 0.1, max: 10, class: "slide", id: "rating_slider" %>

  <%= f.number_field :weight, label: "Weight (0-5)",
                     required: true, step: 0.1, max: 5 %>
  <%= f.number_field :playing_time, required: true, min: 0%>
  <%= f.number_field :min_players, required: true, min: 0 %>
  <%= f.number_field :max_players, required: true, min: 0, max: 20 %>

  <%= f.text_area :comment, required: true %>

  <%= f.submit "Submit" %>
<% end %>