<div class="card">
  <div class="card-header">Copies owned</div>
  <div class="card-body">
    <div class="list-group">
      <% user.game_copies.each do |copy| %>
        <div class="list-group-item list-group-item-action d-md-flex align-items-center border-0 px-0">
          <div class="d-flex gap-3 align-items-center">
            <%= image_tag(copy.realizes.thumbnail_url, class: "img-thumbnail shadow-sm", width: 100) %>
            <div>
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= link_to copy.realizes.title, copy %>
                  <span class="text-secondary">(#<%= copy.id %>)</span></h5>
              </div>
              <p class="mb-1"><%= copy.description %></p>
              <div class="d-flex gap-2">
                <small>Condition: <%= copy.condition %>/8</small>
                <small>Status: <%= render 'game_copies/status', game_copy: copy %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
